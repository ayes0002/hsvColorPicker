<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.ayes0002.hsvcolorpicker.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colorSwatch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:height="200dp"
        android:background="#000000" />

    <TextView
        android:text="@string/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/value"
        android:layout_below="@+id/saturationSB"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/valueSB"
        android:layout_below="@+id/value"
        android:max="100"
        android:minHeight="30dp"
        android:background="@drawable/black_white"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/hueSB"
        android:layout_below="@+id/hue"
        android:max="359"
        android:minHeight="30dp"
        android:background="@drawable/color_gradient"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/saturation"
        android:layout_below="@+id/hueSB"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/saturationSB"
        android:layout_below="@+id/saturation"
        android:max="100"
        android:minHeight="30dp"
        android:background="@drawable/white_black"
        android:layout_alignParentStart="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="45dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/blackButton"
                android:layout_weight="1"
                android:background="#000000"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/redButton"
                android:layout_weight="1"
                android:background="#FF0000"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/limeButton"
                android:layout_weight="1"
                android:background="#00FF00"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/blueButton"
                android:layout_weight="1"
                android:background="#0000FF"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/yellowButton"
                android:layout_weight="1"
                android:background="#FFFF00"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/cyanButton"
                android:layout_weight="1"
                android:background="#00FFFF"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/magentaButton"
                android:layout_weight="1"
                android:background="#FF00FF"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/silverButton"
                android:layout_weight="1"
                android:background="#C0C0C0"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/grayButton"
                android:layout_weight="1"
                android:background="#808080"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/maroonButton"
                android:layout_weight="1"
                android:background="#800000"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/oliveButton"
                android:layout_weight="1"
                android:background="#808000"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/greenButton"
                android:layout_weight="1"
                android:background="#008000"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/purpleButton"
                android:layout_weight="1"
                android:background="#800080"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/tealButton"
                android:background="#008080"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/navyButton"
                android:background="#000080"
                android:onClick="onButtonSelected"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:text="@string/hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hue"
        android:layout_below="@+id/colorSwatch"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:layout_marginTop="18dp" />

</RelativeLayout>
